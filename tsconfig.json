{
  "compilerOptions": {
    "declaration": true,
    "target": "esnext",
    "newLine": "LF",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "outDir": "./dist",
    "emitDeclarationOnly": false
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}